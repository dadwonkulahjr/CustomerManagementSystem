@model CustomerEditViewModel
@{
    ViewBag.Title = "Modify Existing Customer";
}
<form asp-action="create" asp-controller="home" method="post" class="mt-2">
    <div class="form-group row">
        <label class="col-form-label col-md-2" asp-for="Name"></label>
        <div class="col-sm-10">
            <input asp-for="Name" placeholder="Name..." class="form-control" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-form-label col-md-2" asp-for="Email"></label>
        <div class="col-sm-10">
            <input asp-for="Email" placeholder="Email..." class="form-control" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-form-label col-md-2" asp-for="Gender"></label>
        <div class="col-sm-10">
            <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="custom-select mr-2">
                <option value="">Select gender</option>
            </select>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create New Customer</button>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

</form>